<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        >
        <ImageView
            android:id="@+id/iv_service_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/common_margin"
            />
        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/common_margin"
            app:layout_constraintStart_toEndOf="@+id/iv_service_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:Text="Service Name"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/common_margin"
            app:layout_constraintStart_toEndOf="@+id/iv_service_img"
            app:layout_constraintTop_toBottomOf="@id/tv_service_name"
            tools:Text="Service time"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_name"
            tools:Text="Service time"
            android:textColor="@color/teal_200"
            android:gravity="center_vertical"
            android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>